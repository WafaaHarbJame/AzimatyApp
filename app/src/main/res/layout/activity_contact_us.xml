<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    android:background="@color/white"

    >



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contactus"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gray5"
                android:fontFamily="@font/cairo_bold"
                android:layout_centerInParent="true"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mBack"
                android:background="#00000000"
                android:layout_marginEnd="16dp"
                android:src="@drawable/back"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"

                />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/contactusimage"
        />

    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="ltr"
        android:gravity="end"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/mobilenumber"
        android:background="@drawable/contactstyle"
        android:drawableEnd="@drawable/call"
        android:drawablePadding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="+966555555555" />
    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/emailredicon"
        android:background="@drawable/contactstyle"
        android:drawableEnd="@drawable/email"
        android:drawablePadding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/email" />

    <TextView
        android:id="@+id/facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/facebook"
        android:background="@drawable/contactstyle"
        android:drawablePadding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/facebook" />
    <TextView
    android:id="@+id/twitter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:layout_marginTop="8dp"
    android:drawableStart="@drawable/twitter"
        android:background="@drawable/contactstyle"
    android:drawablePadding="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:text="@string/twitter" />
    <TextView
        android:id="@+id/instagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/instagram"
        android:background="@drawable/contactstyle"
        android:drawablePadding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/instagram" />
    <TextView
        android:id="@+id/Tvadvertisawahats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:drawablePadding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:text="@string/Tvadvertisawahats" />
    <TextView
        android:id="@+id/advertisawahats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableEnd="@drawable/whatsupicon"
        android:background="@drawable/contactstyle"
        android:drawableStart="@drawable/whatscallsmall"
        android:drawablePadding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textDirection="ltr"
        android:gravity="end"
        android:text="+966555555555" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

