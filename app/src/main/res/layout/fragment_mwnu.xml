<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.MenuFragment"
    android:orientation="vertical"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:fontFamily="@font/cairo_bold"
        android:textColor="@color/darkgrey2"
        android:layout_marginTop="16dp"

        android:layout_centerInParent="true"
        />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:id="@+id/userlogindata"
            android:padding="16dp"
            android:background="@drawable/gray_bacground"
            android:layout_margin="@dimen/activity_vertical_margin_large">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/menuImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profile_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:civ_border_width="2dp"
                android:scaleType="centerCrop"
                app:civ_border_color="#FFFFFF"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvFullNameMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin_small"
                android:paddingStart="@dimen/activity_vertical_margin_medium"
                android:text=""
                android:textColor="@color/Black"
                app:layout_constraintStart_toEndOf="@+id/menuImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_Phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_vertical_margin_medium"
                android:paddingEnd="@dimen/activity_vertical_margin_small"
                android:paddingBottom="@dimen/activity_vertical_margin_small"
                android:text=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvFullNameMenu"
                app:layout_constraintTop_toBottomOf="@+id/tvFullNameMenu" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/EditData"
                android:background="#00000000"
                android:src="@drawable/edit_dataaprofile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMyservice"
        android:padding="@dimen/activity_vertical_margin_medium"
        android:drawableStart="@drawable/myservice"
        android:text="@string/myservice"
        android:gravity="center|start"
        android:drawablePadding="@dimen/activity_vertical_margin_medium"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvContactUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/contactus"
            android:drawablePadding="@dimen/activity_vertical_margin_medium"
            android:gravity="center|start"
            android:padding="@dimen/activity_vertical_margin_medium"
            android:text="@string/contactus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvAboutus"
        android:padding="@dimen/activity_vertical_margin_medium"
        android:drawableStart="@drawable/aboutus"
        android:text="@string/aboutus"
        android:gravity="center|start"
        android:drawablePadding="@dimen/activity_vertical_margin_medium"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTermsconditionApp"
        android:padding="@dimen/activity_vertical_margin_medium"
        android:drawableStart="@drawable/termscondition"
        android:text="@string/termscondition"
        android:gravity="center|start"
        android:drawablePadding="@dimen/activity_vertical_margin_medium"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLogout"
        android:padding="@dimen/activity_vertical_margin_medium"
        android:drawableStart="@drawable/exiticon"
        android:text="@string/logout"
        android:gravity="center|start"
        android:drawablePadding="@dimen/activity_vertical_margin_medium"/>


</LinearLayout>